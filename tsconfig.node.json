{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "esModuleInterop": false,
    "moduleResolution": "node"
  },
  "include": ["*.ts", "backend", "types"]
}
